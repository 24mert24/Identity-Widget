{
  "name": "netlify-auth",
  "description": "Netlify authentication modal component",
  "version": "1.0.0",
  "author": "Netlify",
  "dependencies": {
    "bel": "^5.0.3",
    "csjs": "^1.1.0",
    "gotrue-js": "^0.6.3",
    "nanobus": "^4.2.0",
    "nanocomponent": "^6.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-syntax-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.3.0",
    "budo": "^10.0.4",
    "cpr": "^2.2.0",
    "csjs-extractify": "^1.0.0-alpha.0",
    "csjs-injectify": "^1.0.1",
    "eslint": "^4.3.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-config-semistandard": "^11.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.6.1",
    "rimraf": "^2.6.1",
    "uglifyify": "^4.0.3",
    "yo-yoify": "^3.7.3"
  },
  "license": "MIT",
  "main": "dist/netlify-identity.js",
  "style": "dist/netlify-identity.css",
  "scripts": {
    "test": "run-s test:*",
    "test:lint": "eslint .",
    "start":
      "budo example/modular/index.js:bundle.js --dir example/modular --live --open",
    "start:tag": "budo tag-api.js:tag-api.js --dir example/tag --live --open",
    "build": "run-s clean && run-p build:*",
    "build:site": "cpr index.html dist/index.html -o",
    "build:module":
      "browserify index.js --standalone --transform-key=production -p [ csjs-extractify -o dist/netlify-identity.css ] > dist/netlify-identity.js",
    "build:umd":
      "browserify --standalone tag-api.js  > dist/netlify-identity-umd.js",
    "clean:": "rimraf dist && mkdirp dist"
  },
  "browserify": {
    "production": [
      [
        "babelify",
        {
          "presets": ["es2015"],
          "plugins": [
            "syntax-object-rest-spread",
            "transform-object-rest-spread"
          ]
        }
      ]
    ],
    "transform": [
      [
        "babelify",
        {
          "presets": ["es2015"],
          "plugins": [
            "syntax-object-rest-spread",
            "transform-object-rest-spread"
          ]
        }
      ],
      "csjs-injectify"
    ]
  }
}
